<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    
    <style name="exampleToast">
        <item name="stColorBackground">@color/colorPrimary</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stTextSize">20dp</item>
        <item name="stSolidBackground">true</item>
        <item name="stLength">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>

</resources>
